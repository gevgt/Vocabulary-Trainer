#Funktionen

def alleeinmal():
	os.system("Clear")
	loop = True
	while loop == True:
		z = paragraph.copy()
		falsch = []
		for i in range(len(paragraph)):
			os.system("clear")
			index = random.randint(0, len(z)-1)
			b = z[index]
			print("Paragraph " + str(i+1) + "/" + str(len(paragraph)))
			print(beschreibung[b])
			input()
			print(z[index])
			print("\n\n")
			try:
				c = int(input("0: Exit\n1: Falsch\n-> "))
				if c == 0:
					os.system("clear")
					loop = False
					break
				if c == 1:
					falsch.append(z[index])
					z.pop(index)
			except:
				z.pop(index)
				continue
		os.system("clear")
		print("Folgende Paragraphen musst du dir noch einmal anschauen:")
		for j in range(len(falsch)):
			print(falsch[j])
		print("\n")
		print("Richtig: ")
		print(len(paragraph)-len(falsch))
		if loop == False:
			break
		try:
			falscheueben = int(input("\n0: Falsche üben? "))
		except:
			break
		if falscheueben == 0:
			for k in range(5):
				for l in range(len(falsch)):
					os.system("clear")
					print("Runde " + str(k+1) + "/5")
					print(beschreibung[falsch[l]])
					input()
					print(falsch[l])
					input()
			os.system("clear")
			print("Geschafft!!!")
			input()
			break
		else:
			break


def intensiv():
	os.system("Clear")
	anzahlvokabeln = int(input("Wie viele Vokabeln möchtest du jeweils intensiv lernen?\n-> "))
	loop = True
	while loop == True:
		lernen = []
		zufallszahlen = []
		for i in range(anzahlvokabeln):
			while True:
				zz = random.randint(0, len(paragraph)-1)
				if zz in zufallszahlen:
					continue
				else:
					break
			lernen.append(paragraph[zz])
			zufallszahlen.append(zz)
		os.system("clear")
		for j in range(int(anzahlvokabeln)):
			print(str(lernen[j]) + " :\n" + str(beschreibung[lernen[j]]))
			print()
		input()
		for i in range(6):
			for j in range(anzahlvokabeln):	
				os.system("clear")
				print("Runde " + str(i+1) + "/6")
				print(beschreibung[lernen[j]])
				input()
				print(lernen[j])
				print("\n\n")
				try:
					c = int(input("0: Exit\n-> "))
					if c == 0:
						os.system("clear")
					loop = False
					break
				except:
					continue
			if loop == False:
				break
		os.system("Clear")
		print("Nächster Stapel")
		input()


def zufälligalle():
	os.system("Clear")
	while True:
		os.system("clear")
		z = random.choice(paragraph)
		print(beschreibung[z])
		input()
		print(z)
		print("\n\n")
		try:
			a = int(input("0: Exit\n->"))
			if a == 0:
				os.system("clear")
				break
		except:
			continue





# Hauptprogramm

auswahl = True
while auswahl == True:
	os.system("clear")
	print("Welche Kapitel möchtest du lernen?\n0: Kapitel 1-6\n1: Kapitel 7-12\n2: Kapitel 13-16\n3: Alle")
	try:
		kapitel = int(input("-> "))
	except:
		continue
	if kapitel == 0:
		beschreibung = beschreibung1
		paragraph = paragraph1
		auswahl = False
	if kapitel == 1:
		beschreibung = beschreibung2
		paragraph = paragraph2
		auswahl = False
	if kapitel == 2:
		beschreibung = beschreibung3
		paragraph = paragraph3
		auswahl = False
	if kapitel ==3:
		beschreibung = {**{**beschreibung1, **beschreibung2}, **beschreibung3}
		paragraph = paragraph1 + paragraph2 + paragraph3
		auswahl = False
	else:
		continue
while True:
	os.system("clear")
	print("0: Alle Vokabeln einmal durchgehen")
	print("1: Vokabeln päckchenweise intensiv lernen")
	print("2: Alle Vokabeln zufällig durcheinander")
	print("3: Ende")
	print()
	try:
		modus = int(input("-> "))
	except:
		continue
	if modus == 0:
		alleeinmal()
	if modus == 1:
		intensiv()
	if modus == 2:
		zufälligalle()
	if modus == 3:
		os.system("clear")
		break
	else:
		continue
